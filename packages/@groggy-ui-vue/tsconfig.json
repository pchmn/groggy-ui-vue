{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@directives/*": [
        "src/directives/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@themes/*": [
        "src/themes/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}